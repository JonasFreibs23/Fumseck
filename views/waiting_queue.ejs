<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include partials/head %>
  </head>
  <body>
    <div class="uk-container">
      <h1>Waiting Room</h1>
      <% if(host) { %>
        <p><strong>You are the Host</strong></p>
      <% }else{ %>
        <p><strong>You are a Player</strong></p>
        <% } %>
      <p>Game id : <%= gameId %></p>
      <p>You pseudo <span id="pseudo"><%= pseudo %></span></p>
      <div id="newPlayer">
        
      </div>

      <div class="uk-margin">
        <div class="uk-inline">
            <span class="uk-form-icon" uk-icon="icon: link"></span>
            <input class="uk-input uk-form-large" type="text" placeholder="Game ID : <%= gameId %>" name="gameId" disabled>
        </div>
      </div>
      
      <p>Share the link to your friends : <a href="http://127.0.0.1:34335/join_game/<%= gameId %>">localhost:34335/join_game/<%= gameId %></a> !</p>

    </div>
    
    <script type="text/javascript">
      let socket = io.connect('http://localhost:34335')

      socket.emit('waiting_queue', {pseudo:document.getElementById('pseudo').textContent})

      socket.on('player_connected', (data) => {
        console.log(data.newPlayerPseudo)
        let divNewPlayer = document.getElementById('newPlayer')
        divNewPlayer.innerHTML += "<p>" + data.newPlayerPseudo + "</p>"
     })

    </script>
  </body>
</html>
