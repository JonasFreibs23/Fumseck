<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include partials/head %>
    <style media="screen">
      #in_game{
        display: none;
      }
    </style>
    <link rel="stylesheet" href="/css/analogClock.css">
    <script src="/js/animation.js" charset="utf-8"></script>
    <script src="/js/game.js" charset="utf-8"></script>
  </head>
  <body>
    <div class="uk-container">
      <div id="waiting_queue">
        <h1>Waiting Room</h1>
        <% if(host) { %>
          <p><strong>You are the Host</strong></p>
        <% }else{ %>
          <p><strong>You are a Player</strong></p>
          <p>You pseudo <span id="pseudo"><%= pseudo %></span></p>
          <% } %>
        <p>Game id : <span id="gameId"><%= gameId %></span></p>

        <div id="newPlayer">

        </div>

        <div class="uk-margin">
          <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: link"></span>
              <input class="uk-input uk-form-large" type="text" placeholder="Game ID : <%= gameId %>" name="gameId" disabled>
          </div>
        </div>

        <p>Share the link to your friends : <a href="http://127.0.0.1:34335/join_game/<%= gameId %>" target="_blank">localhost:34335/join_game/<%= gameId %></a> !</p>
      </div>
      <div id="in_game">
        <h1 id="question" class="uk-title"></h1>
        <div class="uk-child-width-1-2@s uk-grid-match" uk-grid>
          <div>
            <div class="uk-card uk-card-default uk-card-hover uk-card-body">
              <p>Choix A</p>
              <h3 id="responseA" class="uk-card-title"></h3>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-hover uk-card-body">
              <p>Choix B</p>
              <h3 id="responseB" class="uk-card-title"></h3>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-hover uk-card-body">
              <p>Choix C</p>
              <h3 id="responseC" class="uk-card-title"></h3>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-hover uk-card-body">
              <p>Choix D</p>
              <h3 id="responseD" class="uk-card-title"></h3>
            </div>
          </div>
        </div>
        <div id="countdown">
          <div id="countdown-number"></div>
          <svg>
            <circle id="timer-svg" r="18" cx="20" cy="20"></circle>
          </svg>
        </div>
      </div>
    </div>
    <input type="submit" onclick="test()" value="">
    <script type="text/javascript">



      window.addEventListener('DOMContentLoaded', (event) => {
        let socket = io.connect('http://localhost:34335')
        let pseudo = document.getElementById('pseudo')

        if(pseudo){
          socket.emit('waiting_queue', {pseudo:pseudo.textContent, gameId:document.getElementById('gameId').textContent})
        }

        socket.on('player_connected', (data) => {
          console.log(data.arrayPlayer)
          let divNewPlayer = document.getElementById('newPlayer')

          divNewPlayer.innerHTML = ''
          data.arrayPlayer.forEach((pseudo) => {
            divNewPlayer.innerHTML += "<p>" + pseudo + "</p>"
          })

          socket.on('game_is_ready', () =>{
            document.getElementById('waiting_queue').style.display = 'none'
            document.getElementById('in_game').style.display = 'block'

          })
        })
      })

    </script>
  </body>
</html>
