<div id="waitingQueue">
  <div class="uk-flex uk-flex-center uk-margin-top">
    <h1 class="uk-heading-medium">Waiting Queue</h1>
  </div>
  <% if(host) { %>
    <p class="uk-text-center uk-text-large">Share the link to your friends : <a href="http://127.0.0.1:34335/join_game/<%= gameId %>" target="_blank">localhost:34335/join_game/<%= gameId %></a> !</p>
  <% } else { %>
    <input type="hidden" id="pseudo" value="<%= pseudo %>">
  <% } %>
    <input type="hidden" id="gameId" value="<%= gameId %>">

    <p class="uk-text-center">Player is the room : </p>
    <div id="newPlayer" class="uk-text-center" style="display: table; margin: 0 auto;">
    </div>
    <% if(host) { %>
      <br>
      <button onclick="forceStartGame()" style="display: table; margin: 0 auto; width: 500px;" class="uk-button uk-button-secondary uk-button-large">Start game</button>
    <% } %>

</div>
