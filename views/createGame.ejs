<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include partials/head %>
    <link rel="icon" href="..\public\img\icon\favicon.ico" type="image/x-icon"/>
  </head>
  <body>

     <div class="uk-height-small uk-flex uk-flex-center uk-flex-middle uk-background-cover uk-light"
     data-src="https://source.unsplash.com/evlkOfkQ5rE/1600x900"
     data-srcset="https://source.unsplash.com/evlkOfkQ5rE/1600x900"
     data-sizes="(min-width: 650px) 650px, 100vw" uk-img>

      <div class="uk-flex uk-flex-center uk-margin-top">
        <h1 class="uk-heading-medium">Create a game</h1>
      </div>

    </div>

    <div class="uk-container">
      <!-- TODO : add labels -->
      <br>
      <a class="uk-link-muted" href="/"><span uk-icon="icon: chevron-left"></span>Back Home</a>

      <form class="uk-form-horizontal uk-margin-large uk-text-center" method="post" action="/create_game_processing">

          <div class="uk-margin">
            <div class="uk-inline">
              <div uk-form-custom="target: > * > span:first-child">
                  <select name="nbPlayer">
                      <option value="">Select number of player</option>
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                  </select>
                  <button class="uk-button uk-button-default uk-width-medium uk-form-large" type="button" tabindex="-1">
                      <span></span>
                      <span uk-icon="icon: chevron-down"></span>
                  </button>
              </div>
            </div>
          </div>

          <div class="uk-margin">
            <div class="uk-inline">
              <div uk-form-custom="target: > * > span:first-child">
                  <select name="theme">
                    <%
                        if(typeof load_game == 'undefined') {
                          %><option value="">Select the game theme</option><%
                          for (var j = 0; j < topics.names.length; j++) {
                              %><option value="<%= topics.paths[j] %>"><%= topics.names[j].toUpperCase() %><%
                          }
                        }
                        else {
                          %><option value="<%= quizFilename %>"><%= quizTitle.toUpperCase() %><%
                        }
                    %>
                  </select>
                  <button class="uk-button uk-button-default uk-width-medium uk-form-large" type="button" tabindex="-1">
                      <span></span>
                      <span uk-icon="icon: chevron-down"></span>
                  </button>
              </div>
            </div>
          </div>

          <div class="uk-margin">
            <div class="uk-inline">
              <div uk-form-custom="target: > * > span:first-child">
                  <select name="nbQuestion">
                      <%
                          if(typeof load_game == 'undefined') {
                            %><option value="">Select number of questions</option><%
                            for (var j = 1; j < 16; j++) {
                                %><option value="<%= j %>"><%= j %><%
                            }
                          }
                          else {
                            %><option value="<%= nbQuestions %>"><%= nbQuestions %><%
                          }
                      %>
                  </select>
                  <button class="uk-button uk-button-default uk-width-medium uk-form-large" type="button" tabindex="-1">
                      <span></span>
                      <span uk-icon="icon: chevron-down"></span>
                  </button>
              </div>
            </div>
          </div>

          <input class="uk-button uk-button-primary" type="submit" value="Create the game" name="create_game"></input>
      </form>

      <% include partials/footer %>

    </div>

  </body>
</html>
